{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist" // Directory for compiled files
  },
  "include": ["**/*.ts"], // Include all TypeScript files in this directory and subdirectories
